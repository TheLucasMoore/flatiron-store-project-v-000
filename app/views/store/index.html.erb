<table class="table table-hover">
<th>Item</th>
<th>Price</th>
<th>In Stock</th>
<% if user_signed_in? %>
<th>Add to Cart</th>
<% end %>

<% @items.each do |item| %>
<tr>
<td><h2><%= item.title %></h2></td>
<td><h2>$ <%= item.price %></h2></td>
<td><h2><%= item.inventory %></h2></td>

<% if user_signed_in? && @cart %>
<td><%= button_to 'Add to Cart', line_items_path(item_id: item) %></td>
<% end %>
</tr>
<% end %>
</table>